{
  "name": "@webhook-relay/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply webhook-relay-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply webhook-relay-db --remote"
  },
  "dependencies": {
    "@webhook-relay/shared": "workspace:*",
    "drizzle-orm": "^0.38.0",
    "hono": "^4.6.0",
    "ulid": "^2.3.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.17.0",
    "vitest": "^2.1.0",
    "wrangler": "^3.99.0"
  }
}
